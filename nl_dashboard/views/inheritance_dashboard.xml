<odoo>
    <template id="odoo_inheritance_dashboard">
        <html lang="en">
            <t t-call="nl_dashboard.dashboard_head"/>
            <body>
                <t t-call="nl_dashboard.dashboard_navbar"/>

                <main id="main" class="main">
                    <section class="section dashboard">
                        <div class="row">
                            <div class="col-lg-12">

                                <div class="row">
                                    <div class="col-xxl-3 col-md-3 col-sm-6">
                                        <div class="card info-card sales-card">
                                            <div class="card-body pb-0">
                                                <h5 class="card-title mb-0">Executive Director Approver 
                                                    <!-- <br/>
                                                    <span class="text-capitalize">Without Filter</span> -->
                                                </h5>
                                                <div class="d-flex align-items-center">
                                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                                        <i class="bi bi-check"></i>
                                                    </div>
                                                    <div class="ps-3">
                                                        <h6>
                                                            <t t-out="total_today_sale or 0" />
                                                        </h6>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </section>
                </main>

                <t t-call="nl_dashboard.dashboard_footer"/>
                <a href="#" class="back-to-top d-flex align-items-center justify-content-center">
                    <i class="bi bi-arrow-up-short"></i>
                </a>
                <t t-call="nl_dashboard.dashboard_scripts"/>
            </body>
        </html>
    </template>
</odoo>
